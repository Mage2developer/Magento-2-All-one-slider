<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mage2\Allinone\Block\ProductCollection" name="allinone.featured" template="Mage2_Allinone::content.phtml">
                <arguments>
                    <argument name="block_type" xsi:type="string">featured</argument>
                </arguments>
            </block>
            <block class="Mage2\Allinone\Block\ProductCollection" name="allinone.new" template="Mage2_Allinone::content.phtml">
                <arguments>
                    <argument name="block_type" xsi:type="string">new</argument>
                </arguments>
            </block>
            <block class="Mage2\Allinone\Block\ProductCollection" name="allinone.mostviewed" template="Mage2_Allinone::content.phtml">
                <arguments>
                    <argument name="block_type" xsi:type="string">mostviewed</argument>
                </arguments>
            </block>
            <block class="Mage2\Allinone\Block\ProductCollection" name="allinone.bestseller" template="Mage2_Allinone::content.phtml">
                <arguments>
                    <argument name="block_type" xsi:type="string">bestseller</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
